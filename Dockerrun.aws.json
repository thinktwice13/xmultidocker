{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "thinktwice13/xmultidocker-client:latest",
      "memory": 128,
      "hostname": "client",
      "essential": true
    },
    {
      "name": "api",
      "image": "thinktwice13/xmultidocker-api:latest",
      "memory": 128,
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "thinktwice13/xmultidocker-worker:latest",
      "memory": 128,
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "thinktwice13/xmultidocker-nginx:latest",
      "memory": 128,
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "api"]
    }
  ]
}
